div#modal-config.modal.micromodal-slide(aria-hidden="true")
    div.modal__overlay(tabindex="-1" data-micromodal-close)
        div.modal__container(role="dialog" aria-modal="true" aria-labelledby="modal-config-title")
            header.modal__header
                h2#modal-config-title Modal Title
                button.modal__close(aria-label="Close modal" data-micromodal-close)
            main.modal__content
                div#modal-config-content
                    pre
                        code#config-data
            footer.modal__footer
                button.modal__btn(data-micromodal-close aria-label="Close this dialog window") Close